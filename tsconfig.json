{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@adapters/*": ["adapters/*"],
            "@core/*": ["core/*"]
        }
    },
    "include": [
        "./adapters/**/*.ts",
        "./core/**/*.ts",
        "**/*.ts",
        "*.ts"
    ],
    "exclude": ["node_modules", "dist"]
} 